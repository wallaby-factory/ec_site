// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(cuid())
  email      String  @unique
  name       String?
  address    String? // Deprecated in favor of structured fields
  nickname   String? @unique
  zipCode    String?
  prefecture String?
  city       String?
  street     String?
  building   String?

  password  String   @default("") // Ideally should be hashed, plain/simple for now as requested
  // role field removed - User is strictly for customers
  points    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders       Order[]
  publicOrders PublicOrder[]
  pointHistory PointTransaction[]
}

model AdminUser {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  role      String   @default("STAFF") // ADMIN, STAFF
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id     String  @id @default(cuid())
  userId String? // Nullable for guest checkout if needed, or link to User
  user   User?   @relation(fields: [userId], references: [id])

  status      String @default("PENDING") // PENDING, SEWING, SHIPPED, DELIVERED
  totalAmount Int

  shippingName    String
  shippingZip     String
  shippingAddress String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // To track status updates

  items OrderItem[]
}

model OrderItem {
  id      String @id @default(cuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id])

  shape    String @default("SQUARE") // SQUARE, CYLINDER, CUBE
  width    Int // in cm
  height   Int // in cm
  depth    Int? // in cm (for CUBE)
  diameter Int? // in cm (for CYLINDER)

  colorFabric   String
  colorZipper   String // "String" (cord)
  colorFastener String // "Stopper" (cord lock)

  cordCount Int @default(1) // Number of cards (1 or 2)

  quantity Int
  price    Int // Unit price at time of purchase
}

model PublicOrder {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  itemName      String // Name of the item it fits (e.g. "Snow Peak Peg Hammer")
  description   String?
  imageUrl      String // Proof image (deprecated, kept for backward compatibility)
  productImages String  @default("[]") // JSON array of product image paths (max 3)
  tags          String? // Comma separated tags

  // Dimensions for Easy Order
  shape    String @default("SQUARE")
  width    Int
  height   Int
  depth    Int?
  diameter Int?

  cordCount Int @default(1) // Number of cards (1 or 2)

  isPublic  Boolean  @default(true)
  createdAt DateTime @default(now())
}

model PointTransaction {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  amount    Int // Positive for gain, negative for spend
  reason    String // e.g. "Order Reward", "Used for Purchase", "Public Order Bonus"
  createdAt DateTime @default(now())
}

model Material {
  id        String   @id @default(cuid())
  category  String // FABRIC, CORD, FASTENER, PO, THREAD, OTHER
  name      String // Display Name
  status    String   @default("AVAILABLE") // PLENTIFUL, AVAILABLE, LIMITED, OUT_OF_STOCK
  updatedAt DateTime @updatedAt

  @@unique([category, name])
}
